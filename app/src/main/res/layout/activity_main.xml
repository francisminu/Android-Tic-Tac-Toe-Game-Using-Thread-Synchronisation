<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.minuf.cs478_project4.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/currentPlayerStatus" />



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentPlayerStatus"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout"
        android:layout_centerInParent="true">

        <TableRow
            android:id="@+id/ticTacToeRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/box0"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>

            <TextView
                android:id="@+id/box1"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>

            <TextView
                android:id="@+id/box2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>

        </TableRow>
        <TableRow
            android:id="@+id/ticTacToeRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/box3"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>

            <TextView
                android:id="@+id/box4"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>

            <TextView
                android:id="@+id/box5"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>
        </TableRow>
        <TableRow
            android:id="@+id/ticTacToeRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/box6"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>

            <TextView
                android:id="@+id/box7"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>

            <TextView
                android:id="@+id/box8"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""/>
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnNewGame"
        android:layout_below="@+id/tableLayout"
        android:layout_centerInParent="true" />


</RelativeLayout>
