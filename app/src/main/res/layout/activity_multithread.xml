<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.minuf.cs478_project4.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Button to Start a New Game"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/currentPlayerStatus"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentPlayerStatus"
        android:id="@+id/tableLayout"
        android:layout_centerInParent="true">

        <TableRow
            android:id="@+id/ticTacToeRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/box0"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=""
                android:gravity="center"/>

            <TextView
                android:id="@+id/box1"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=""
                android:gravity="center"/>

            <TextView
                android:id="@+id/box2"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=""
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:id="@+id/ticTacToeRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/box3"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=""
                android:gravity="center"/>

            <TextView
                android:id="@+id/box4"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/box5"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:id="@+id/ticTacToeRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/box6"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/box7"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/box8"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW GAME"
        android:id="@+id/btnNewGame"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
